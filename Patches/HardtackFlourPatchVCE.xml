    <xpath>Defs/RecipeDef[defName="CookMealHardtackBulk"]/ingredients/li/filter/thingDefs</xpath>
    <value>
      <li>VCE_Flour</li>
    </value>
  </li>

  <li Class="PatchOperationAdd">
    <xpath>Defs/RecipeDef[defName="CookMealHardtackBulk"]/fixedIngredientFilter/thingDefs</xpath>
    <value>
      <li>VCE_Flour</li>
    </value>
